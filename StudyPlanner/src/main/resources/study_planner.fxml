<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.MainController" prefWidth="800.0" prefHeight="400.0">
    <!-- Course Name Field -->
    <TextField fx:id="courseNameField" layoutX="20.0" layoutY="20.0" prefWidth="350.0" promptText="Course Name" />

    <!-- Task Name Field -->
    <TextField fx:id="taskNameField" layoutX="20.0" layoutY="80.0" prefWidth="350.0" promptText="Task Name" />

    <!-- Priority Field -->
    <TextField fx:id="priorityField" layoutX="20.0" layoutY="140.0" prefWidth="350.0" promptText="Priority" />

    <!-- Date Picker -->
    <DatePicker fx:id="datePicker" layoutX="20.0" layoutY="200.0" prefWidth="350.0" />

    <!-- Add Task Button -->
    <Button fx:id="addButton" text="Add Task" layoutX="20.0" layoutY="260.0" prefWidth="150.0" onAction="#handleAddTask" />

    <!-- View Timetable Button -->
    <Button fx:id="viewButton" text="View Timetable" layoutX="200.0" layoutY="260.0" prefWidth="150.0" onAction="#handleViewTimetable" />

    <!-- Task List View -->
    <ListView fx:id="taskListView" layoutX="400.0" layoutY="20.0" prefWidth="390.0" prefHeight="300.0" />
</AnchorPane>
